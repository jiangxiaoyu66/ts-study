{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["esnext","DOM"],
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
    "noImplicitAny": false,  // 翻译： 没有隐形的any。使用之后对隐形类型为any的统一标记错误
    "isolatedModules": false
  },
  "include": ["src"]
}
